#
# mountainRice sxhkd configuration file
#

#
# wm independent hotkeys
#

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

#
# core hotkeys
#

# restart sxhkd
super + shift + c
    pkill -USR1 -x sxhkd

# restart bspwm
super + shift + b
    bspc {quit, wm -r}

# close and kill
super + q
	bspc node -{c,k}

# selection screenshot
Print
    maim -s ~/Images/screenshots/$(date +%Y-%m-%d_%T).png

# screenshot
super + Print
    maim ~/Images/screenshots/$(date +%Y-%m-%d_%T).png

# active window screenshot
    maim -i $(xdotool getactivewindow ) ~/Images/screenshots/$(date +%Y-%m-%d_%T).png

# mute audio(fn + f1)
XF86AudioMute
    pactl set-sink-mute 0 toggle

# decrease volume (fn + f2)
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

# increase volume (fn + f3)
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%

# mute mic(fn + f4)
XF86AudioMicMute
    pactl set-source-mute 1 toggle

# decrease brightness (fn + f5)
XF86MonBrightnessDown 
    xbacklight -dec 5

# (fn + f6)
XF86MonBrightnessUp 
    xbacklight -inc 5

# (fn + f7)
# turn on/off wifi (fn + f8)
# hardware implemented in t470

# config folder (fn + f9)
XF86Tools
    kitty --single-instance -d ~/.config

# turn on/off bluetooth (fn + f10)
# hardware implemented in t470

# switch dvorak/qwerty keyboard layout (fn + f11)
XF86Launch2
    ~/.config/mountainRice/scripts/switchkeyboard.sh

# favorite program (fn + f12) [mutt]
XF86Launch1
    kitty --single-instance -e mutt

#
# program hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + d
	rofi -show run

# file manager
super + r
    kitty --single-instance -e env TERM=xterm-kitty ranger

# internet browser
super + f
    firefox-developer-edition

#
# bspwm hotkeys
#

# set the window state
super + shift + {t,p,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }n
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
